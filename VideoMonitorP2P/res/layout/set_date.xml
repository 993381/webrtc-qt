<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_grey"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/add_device_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height_size"
        android:background="@color/title_bg_black"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_set_date_back"
            android:layout_width="60dp"
            android:layout_height="@dimen/title_height_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/title_more_xml"
            android:contentDescription="@null"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/btn_title_back_selected" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/request_terminal_video"
            android:textColor="@color/orange"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_up"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:id="@+id/iv_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="5.0dip"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/start_date"
            android:textColor="@color/light_black"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_start_date"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_set_start_date"
            android:layout_toRightOf="@+id/iv_start_date"
            android:background="@null"
            android:inputType="@null"
            android:padding="0.0dip"
            android:textColor="@color/light_black"
            android:textSize="18.0sp" />

        <Button
            android:id="@+id/btn_set_start_date"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/date_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_down"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:id="@+id/iv_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="5.0dip"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/end_date"
            android:textColor="@color/light_black"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_end_date"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_set_end_date"
            android:layout_toRightOf="@+id/iv_end_date"
            android:background="@null"
            android:inputType="@null"
            android:padding="0.0dip"
            android:textColor="@color/light_black"
            android:textSize="18.0sp" />

        <Button
            android:id="@+id/btn_set_end_date"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/date_icon" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_set_date_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_style"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>