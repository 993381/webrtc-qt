<?xml version="1.0" encoding="utf-8" ?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android">        
	<item android:state_pressed="true">
	    <!-- 按键按下风格 -->
		<shape>
		    <size android:height="50dip" />
			<stroke android:width="0.5dip" android:color="@color/blue" />
			<solid android:color="@color/blue" />
			<corners android:topRightRadius="30dip" android:bottomRightRadius="30dp" /> 
	  	</shape>
  	</item>
	<item>
	    <!-- 按键显示风格 -->
		<shape>
		    <size android:height="50dip" />
		    <stroke android:width="0.5dip" android:color="#777777" />
	    	<solid android:color="#FFFFFF" />
	    	<corners android:topRightRadius="30dip" android:bottomRightRadius="30dp" /> 
	    </shape>
	</item>
</selector>