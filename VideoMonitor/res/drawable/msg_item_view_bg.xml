<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <!-- 按键按下风格 -->
		<shape>
            <solid android:color="#FFFFFFFF" />
            <stroke android:width="1dip" android:color="#43CD80" />
            <corners android:bottomLeftRadius="10.0dip" android:bottomRightRadius="10.0dip" android:topLeftRadius="10.0dip" android:topRightRadius="10.0dip" />
            <padding android:bottom="1.0dip" android:left="1.0dip" android:right="1.0dip" android:top="1.0dip" />
        </shape>
	</item>
    <item>
        <!-- 按键显示风格 -->
		<shape>
            <solid android:color="#FFFFFFFF" />
            <stroke android:width="1dip" android:color="#43CD80" />
            <corners android:bottomLeftRadius="10.0dip" android:bottomRightRadius="10.0dip" android:topLeftRadius="10.0dip" android:topRightRadius="10.0dip" />
            <padding android:bottom="1.0dip" android:left="1.0dip" android:right="1.0dip" android:top="1.0dip" />
        </shape>
	</item>
</selector>