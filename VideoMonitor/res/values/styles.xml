<resources>
    
    <style name="AppThemeNormal" parent="" />
    <style name="AppThemeNoTitle" parent="android:Theme.Black.NoTitleBar" />
    <style name="AppThemeFullscreen" parent="android:Theme.Black.NoTitleBar.Fullscreen" />
    <style name="MyThemeBlack" parent="android:Theme.Black" />
    <style name="AppMyDialogActivity" parent="@android:style/Theme.Dialog"/>
    
	<style name="AppThemeDialog" parent="@android:style/Theme.Dialog">
	　　<item name="android:windowIsFloating">true</item>
	　　<item name="android:windowNoTitle">true</item>
	</style>
	
	<style name="VideoPlayTheme" parent="android:Theme.NoTitleBar.Fullscreen">  
     	<item name="android:background">#4F4F4F</item>    
	</style>
	
	<style name="TitleTheme" parent="android:Theme">  
    	<item name="android:windowTitleSize">50dp</item>  
     	<item name="android:background">#188ab5</item>    
	</style>
	
	<style name="PopupAnimationTop" parent="android:Animation" mce_bogus="1">        
	    <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>    
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>  
    </style>
    
	<style name="PopupAnimationBottom" parent="android:Animation" mce_bogus="1">        
	    <item name="android:windowEnterAnimation">@anim/popupwindow_menu_in</item>    
        <item name="android:windowExitAnimation">@anim/popupwindow_menu_out</item>  
    </style> 
    
	<style name="dialog_style" parent="android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/progressbar_bg</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
    </style>
    
	<style name="dialog_player_style" parent="android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
    </style>
</resources>