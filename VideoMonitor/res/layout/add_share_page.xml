<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_size" >

        <TextView
            android:id="@+id/tv_vp_share_device"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height_size"
            android:layout_weight="1"
            android:background="@drawable/viewpage_selected"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/share_device_title"
            android:textColor="@color/orange"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_vp_share_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height_size"
            android:layout_weight="1"
            android:background="@drawable/viewpage_unselected"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/share_user_title"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/share_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>